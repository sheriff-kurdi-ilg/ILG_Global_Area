@model ILG_Global_Admin.BussinessLogic.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutNo.cshtml";
}


<div style="margin-top:10%" class="card card-info col-6">
    <div class="card-header">
        <h3 class="card-title">Sign In</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->

    <form class="form-horizontal" asp-action="Login" method="post">
        <input hidden asp-for="ReturnUrl" />
        <div class="card-body">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" placeholder="Email" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword3" placeholder="Password" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck2" asp-for="RememberMe">
                        <label class="form-check-label" for="exampleCheck2">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-info float-end">Sign in</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
