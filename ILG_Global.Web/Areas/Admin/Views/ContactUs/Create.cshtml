@model ILG_Global_Admin.BussinessLogic.ViewModels.ContactUsSectionVM

@using ILG_Global_Admin.Web.Constants
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Contact us </h1>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.ContactUsMasterId" />
    <div class="card">
        <div class="card-header">
            <h1>Create</h1>
            <h4>Contact Us Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="card-title">English Details</h1>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Text" class="control-label"></label>
                                <textarea id="editor1" asp-for="Text" class="form-control"></textarea>
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="card-title">Arabic Details</h1>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="TextAr" class="control-label"></label>
                                <textarea id="editor2" asp-for="TextAr" class="form-control"></textarea>
                                <span asp-validation-for="TextAr" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                    <input asp-for="IsEnabled" type="checkbox" class="custom-control-input" id="customSwitch3">
                    <label class="custom-control-label" for="customSwitch3">Status</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NavigationURL" class="control-label"></label>
                <input asp-for="@Model.NavigationURL" class="form-control" />
            </div>
            <div class="form-group float-end">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    </div>

</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    ClassicEditor
        .create(document.querySelector('#editor1'))
        .catch(error => {
            console.error(error);
        });
    ClassicEditor
        .create(document.querySelector('#editor2'))
        .catch(error => {
            console.error(error);
        });
</script>
}
