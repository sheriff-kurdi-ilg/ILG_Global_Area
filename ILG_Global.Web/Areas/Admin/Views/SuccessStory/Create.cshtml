    <input type="hidden" asp-for="@Model.SuccessStoryId" />
    <input type="hidden" asp-for="@Model.ImageName" />
    <input type="hidden" asp-for="@Model.PdfFileName" />
    <input type="hidden" value="+96590974747" asp-for="@Model.PhoneNumber" />
