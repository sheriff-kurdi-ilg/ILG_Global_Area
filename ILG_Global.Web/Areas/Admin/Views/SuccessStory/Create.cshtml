                            </div>
                            <div class="form-group">
                                <label asp-for="Summary" class="control-label"></label>
                                <textarea data-ck-editor id="editor1" asp-for="Summary" class="form-control"></textarea>
                                <span asp-validation-for="Summary" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
