@model IEnumerable<ILG_Global_Admin.BussinessLogic.ViewModels.HtmlContentVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@{
    string message = TempData["Message"] as string;
    if (!String.IsNullOrEmpty(message))
    {
        <div style="margin:20px" class="alert alert-success " role="alert">@message</div>
    }
}


