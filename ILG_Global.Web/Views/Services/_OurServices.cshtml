@using ILG_Global.BussinessLogic.Models
@using ILG_Global.BussinessLogic.ViewModels
@using Microsoft.AspNetCore.Mvc.Rendering

@model List<OurServiceVM>
@{
    Layout = null;


}

@functions {
    int nCurrentImageSpacing = 30;

    private void vIncreaseImageSpacing() {
        nCurrentImageSpacing += 20;
    }

    private void vResetImageSpacing()
    {
        nCurrentImageSpacing = 30;
    }


}

    <!-- OUR SERVICES section-->
    <div id="ourServices" class="wrapper">
        <div>
        <section id="ourService" class="py-3 home-section our-service-section general-section position-relative" dir="ltr">
            <div id="our-service-slider" class="container owl-carousel owl-theme position-relative">

                @foreach (OurServiceVM oOurServiceVM in Model)
                {
                    vResetImageSpacing();

                    <div class="d-flex contact-list justify-content-start align-items-center flex-column-reverse flex-sm-column-reverse flex-md-row">
                        <div class="img-col-container p-0 position-relative">
                            <div class="img-container position-absolute back-img">
                                <img src="/Assets/images/Mask_gc@2x.png" class="w-100 h-100 ">
                            </div>
                          
                            <div class="img-container position-absolute top-img">
                                <img src="@ILGTools.ToCDN_URL("Uploads/OurServices", oOurServiceVM.ImageURL)" alt="" class="w-100 h-100 ">
                            </div>
                        </div>
                        <div class="p-container col-12 col-sm-12 col-md-5 col-lg-5 col-xl-7 d-flex justify-content-center  flex-column px-5">
                            <div class="row title">
                                <div class="col-12 col-sm-12 col-md-12 title-subtext">
                                    <h5 class="pb-4 pt-5" dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">@oOurServiceVM.Title</h5>
                                    <h6 class="title-text" dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
                                        @Html.Raw(oOurServiceVM.SubTitle)
                                    </h6>
                                </div>
                            </div>
                            <div class="justify-text-center service-card-text" dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
                                @Html.Raw(oOurServiceVM.Summary)
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
    </div>

<script>

</script>